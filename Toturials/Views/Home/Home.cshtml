@{
    Layout = "~/Views/Shared/Header.cshtml";
    ViewData["Title"] = "Home";
}
@model Toturials.Models.UserViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/logo.css" />
    <!-- Ajoutez la référence à Bootstrap depuis wwwroot -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .Csharp {
            background-color: #5a189a;
        }

        .swift {
            background-color: #f95738;
        }
        #introduction_section {
            background:#fff;
        }
      
    </style>

</head>
<body>


    <div id="introduction_section">
        <div class="container text-center">
            <div class="row g-2 ">
                <div class="col-6 d-flex align-items-center justify-centent-start  ">
                    <div class="p-3 mb-30">
                        <h2 style="color: #333; " class="text-left">Hello @Model.FirstName @Model.LastName</h2>
                        <h1 class="text-left" style="color: #00b4d8">Welcome to ProTutoria</h1> <br />

                        <p class="text-dark text-left">
                            your gateway to the dynamic realm of programming.
                            Whether you're a beginner eager to grasp the fundamentals or a seasoned professional
                            seeking to master cutting-edge technologies, our learning platform offers a diverse range
                            of courses tailored to every skill level. Immerse yourself in interactive modules, explore
                            exciting projects, and elevate your programming skills with our dedicated community of instructors
                            and learners. At ProTutoria, we believe in the power of continuous learning as the key to success in
                            the ever-evolving field of programming.
                            Join us on this journey, and let's code the future together.
                        </p>
                        <a href="#tutoriat_section" style="background-color: #0077b6" class="btn text-light text-center">Get Started</a>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-3">
                        <img src="~/images/coding.png" width="600px" alt="coding" />
                    </div>
                </div>
            </div>
        </div>

    </div>
  


    <div id="tutoriat_section" class=" p-5 d-flex flex-column justify-content-center; align-items-center" >
        <div class="row mb-5">
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/python.png" class="card-img-top" alt="python-image">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">Python</h5>
                        <p class="card-text">A popular programming language</p>
                        <a href="@Url.Action("Python", "Home")" class="btn btn-warning">Learn Python</a>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/go.png" class="card-img-top" alt="go_image">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">Go</h5>
                        <p class="card-text">An open source programming language.</p>
                        <a href="@Url.Action("Go", "Home")" class="btn btn-primary">Learn Go</a>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/csharp.png" class="card-img-top" alt="cSharp_image">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">Csharp</h5>
                        <p class="card-text">An object-oriented programming language.</p>
                        <a href="@Url.Action("Csharp", "Home")" class="btn Csharp text-light ">Learn Csharp</a>
                    </div>
                </div>
            </div>
        </div>
        <div class=" row mb-5">
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/swift.png" class="card-img-top" alt="swift_image">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">Swift</h5>
                        <p class="card-text">A programming language for all Apple platforms.</p>
                        <a href="@Url.Action("Swift", "Home")" class="btn swift text-light">Learn Swift</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/js.png" class="card-img-top" alt="javaScript_image">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">JavaScript</h5>
                        <p class="card-text"> The language for programming web pages</p>
                        <a href="@Url.Action("JavaScript", "Home")" class="btn btn-warning">Learn JavaScript</a>
                    </div>
                </div>
            </div>

            <div class="col-4">

                <div class="card" style="width: 18rem;">
                    <img src="~/images/typeScript.png" class="card-img-top" alt="typeScript_image">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">TypeScript</h5>
                        <p class="card-text">A programming language that builds on JavaScript.</p>
                        <a href="@Url.Action("TypeScript", "Home")" class="btn btn-primary">Learn TypeScript</a>
                    </div>
                </div>

            </div>
        </div>

    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>